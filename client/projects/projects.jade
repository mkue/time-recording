template(name='projects')
    .row
        .col-sm-6.col-sm-offset-3
            .panel.panel-default
                .panel-heading Projekte
                .panel-body
                    table.table.b-light.m-t-sm
                        tbody
                            each projects
                                tr
                                    td(width='70%' style='vertical-align: middle;')
                                        a(href='employee/{{_id}}') {{ name }}
                                    td(width='20%' style='vertical-align: middle;')
                                        button.btn.btn-sm.export-project(data-project-id='{{_id}}') Exportieren
                                    td(width='10%' style='vertical-align: middle;')
                                        i.fa.fa-times.remove-project(data-project-id='{{_id}}' style='float:right; cursor:pointer;')
    .row    
        .col-sm-4.col-sm-offset-4.m-t-lg
            form#new-project-form(role='form')
                .form-group
                    h4 Neues Projekt erstellen
                    input.form-control(id='new-project-input' type='text' name='name' placeholder='Name' required)
                .checkbox
                    label
                        input(type='checkbox' id='assign-employees')
                        | Alle Mitarbeiter zuweisen
                button.btn.btn-sm.btn-default#new-project-submit(type='submit') Erstellen
    +removeModal