template(name='employee')
    .row
        .col-xs-12.text-center
            h1 {{ name }}
    .row
        .col-sm-6.col-sm-offset-3
            .panel.panel-default
                .panel-heading Projekte
                .panel-body
                    ul.list-group
                        each projects
                            li.list-group-item {{ name }}
                                i.fa.fa-times.text-right#remove-project(data-project-id='{{_id}}' style='float:right; cursor:pointer;')
    .row
        .col-sm-6.col-sm-offset-3
            .col-xs-12.text-center
                h4 Neues Projekt zu Mitarbeiter hinzufügen
            .col-sm-6.col-sm-offset-3
                select.form-control#project-selector
                    option(value="default" disabled="disabled" selected) Auswählen
                    each availableProjects
                        option(value='{{_id}}') {{ name }}